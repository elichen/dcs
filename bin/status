#!/usr/bin/env python3
"""
fetch-status - Get current status of Fetch robot session

Usage:
    fetch-status <session-id>
    
Output:
    JSON with complete robot state
"""

import sys
import os
import json

# Add parent directory to Python path
sys.path.insert(0, os.path.join(os.path.dirname(os.path.abspath(__file__)), '..'))

from lib.fetch_api import FetchAPI

def main():
    if len(sys.argv) != 2:
        print("Usage: fetch-status <session-id>", file=sys.stderr)
        return 1
    
    session_id = sys.argv[1]
    
    # Get session state using Direct API
    try:
        api = FetchAPI.connect(session_id)
        state = api.get_state()
        
        result = {
            "success": True,
            "session_id": session_id,
            "robot": {
                "gripper_position": state.get("gripper_position", []),
                "gripper_open": state.get("gripper_open", True),
            },
            "environment": {
                "object_position": state.get("object_position", []),
                "target_position": state.get("target_position", []),
            },
            "status": "running"
        }
    except Exception as e:
        result = {"success": False, "message": f"Direct API failed: {str(e)}"}
    
    print(json.dumps(result, indent=2))
    return 0

if __name__ == '__main__':
    sys.exit(main())